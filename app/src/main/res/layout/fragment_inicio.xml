<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_inicio_mensajeBienvenida_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Hola IAN, en la compañía ABC, eres muy importante para nosotros!"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_inicio_editarNombre_btn"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_inicio_editarNombre_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar nombre"
        app:layout_constraintTop_toBottomOf="@id/fragment_inicio_mensajeBienvenida_tv"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>