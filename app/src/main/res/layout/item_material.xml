<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="40dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_material_main_image_iv"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_launcher_background"
        />
    <com.google.android.material.textview.MaterialTextView
    android:id="@+id/item_material_creator_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
    android:text="Ian27Diaz"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintRight_toLeftOf="@id/item_material_quantity_tv"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintTop_toBottomOf="@id/item_material_main_image_iv"
    />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_material_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="1203912309"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/item_material_creator_tv"
        app:layout_constraintTop_toBottomOf="@id/item_material_main_image_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>